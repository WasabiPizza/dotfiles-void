exec swayidle -w \
          timeout 500 'swaylock -f -i /home/emanuele/.local/lock.jpg' \
          timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
          before-sleep 'swaylock -f -i /home/emanuele/.local/lock.jpg'

